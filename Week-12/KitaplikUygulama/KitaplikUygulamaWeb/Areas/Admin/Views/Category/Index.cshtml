@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category Index";
}


<partial name="_Notification"/>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6"> 
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category"  asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create a New Category</a>
        </div>
    </div>
</div>
<br />
<br />
<table class="table table-bordered table-striped table-primary">
    <thead>
        <tr>
            <th>Category Name</th>
        
        
            <th>Display Order</th>
            <th>Operasyonlar </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">@item.Name</td>
                <td width="30%">@item.DisplayOrder</td>
                <td>
                    <div class="btn-group w-75" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2 btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2 btn-sm"><i class="bi bi-trash3-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>


</table>

