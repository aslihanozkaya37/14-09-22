@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "CoverType Index";
}


<partial name="_Notification"/>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6"> 
            <h2 class="text-primary">CoverType List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType"  asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create a New CoverType</a>
        </div>
    </div>
</div>
<br />
<br />
<table class="table table-bordered table-striped table-primary">
    <thead>
        <tr>
            <th>CoverType Name</th>
        
        
            
            <th>Operasyonlar </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">@item.Name</td>
               
                <td>
                    <div class="btn-group w-75" role="group">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2 btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2 btn-sm"><i class="bi bi-trash3-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>


</table>




       
